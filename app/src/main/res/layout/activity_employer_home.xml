<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employer_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    tools:context="com.example.derek.giraffe_android.LoginActivity">

    <LinearLayout
        android:id="@+id/employer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <Button
            android:id="@+id/finder"
            android:background="#444"
            android:text="Find Employees"
            android:textColor="#ffffff"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"/>
        <Button
            android:id="@+id/matches"
            android:background="#444"
            android:text="My Matches"
            android:textColor="#ffffff"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"/>
        <Button
            android:id="@+id/profileSettings"
            android:background="#444"
            android:text="Settings"
            android:textColor="#ffffff"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/employer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_holder">
    </RelativeLayout>
</RelativeLayout>
